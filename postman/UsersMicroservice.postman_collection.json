{
  "info": {
    "name": "Users Microservice API",
    "description": "Colección para probar la API de Usuarios con Laravel Sanctum.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "userId",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Login (obtener token)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"Omario@example.com\",\n  \"password\": \"blu123\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "var data = {};",
              "try { data = pm.response.json(); } catch (e) { data = {}; }",
              "var token = data.token || data.access_token || (data.data && data.data.token);",
              "pm.test('Token presente', function () { pm.expect(token).to.exist; });",
              "if (token) { pm.environment.set('token', token); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Listar usuarios",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/usuarios", "host": ["{{baseUrl}}"], "path": ["api", "usuarios"] }
      },
      "event": [
        { "listen": "test", "script": { "exec": ["pm.test('200 OK', function () { pm.response.to.have.status(200); });"], "type": "text/javascript" } }
      ]
    },
    {
      "name": "Crear usuario",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/usuarios", "host": ["{{baseUrl}}"], "path": ["api", "usuarios"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Marck Londrik\",\n  \"email\": \"Omario@example.com\",\n  \"password\": \"blu123\",\n  \"fecha_nacimiento\": \"1997-05-20\",\n  \"sexo\": \"Masculino\",\n  \"contacto_emergencia\": \"02938428\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200/201', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
              "var jsonData = {}; try { jsonData = pm.response.json(); } catch (e) { jsonData = {}; }",
              "var user = jsonData.data || jsonData;",
              "pm.test('Tiene propiedades de usuario', function () {",
              "  var props = ['id','nombre','email','fecha_nacimiento','sexo','contacto_emergencia'];",
              "  pm.expect(props.some(function(p){return user.hasOwnProperty(p);})).to.be.true;",
              "});",
              "pm.test('Campos no vacíos', function () {",
              "  if (user.nombre !== undefined) pm.expect(user.nombre).to.not.be.empty;",
              "  if (user.email !== undefined) pm.expect(user.email).to.not.be.empty;",
              "});",
              "pm.test('Email válido (si presente)', function () { if (user.email) pm.expect(user.email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/); });",
              "pm.test('Fecha válida (si presente)', function () { if (user.fecha_nacimiento) pm.expect(user.fecha_nacimiento).to.match(/^\\d{4}-\\d{2}-\\d{2}$/); });",
              "pm.test('Tipos correctos', function () {",
              "  if (user.id !== undefined) pm.expect(['number','string']).to.include(typeof user.id);",
              "  if (user.nombre !== undefined) pm.expect(user.nombre).to.be.a('string');",
              "  if (user.email !== undefined) pm.expect(user.email).to.be.a('string');",
              "});",
              "pm.test('Password no expuesta', function () { pm.expect(user).to.not.have.property('password'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Ver usuario",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/usuarios/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "usuarios", "{{userId}}"] }
      },
      "event": [
        { "listen": "test", "script": { "exec": ["pm.test('200 OK', function () { pm.response.to.have.status(200); });"], "type": "text/javascript" } }
      ]
    },
    {
      "name": "Actualizar usuario",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/usuarios/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "usuarios", "{{userId}}"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Marck Londrik Editado\",\n  \"email\": \"Omario@example.com\",\n  \"fecha_nacimiento\": \"1997-05-20\",\n  \"sexo\": \"Masculino\",\n  \"contacto_emergencia\": \"02938428\"\n}"
        }
      },
      "event": [
        { "listen": "test", "script": { "exec": ["pm.test('Status 200/204', function () { pm.expect(pm.response.code).to.be.oneOf([200,204]); });"], "type": "text/javascript" } }
      ]
    },
    {
      "name": "Eliminar usuario",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/usuarios/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "usuarios", "{{userId}}"] }
      },
      "event": [
        { "listen": "test", "script": { "exec": ["pm.test('Status 200/204', function () { pm.expect(pm.response.code).to.be.oneOf([200,204]); });"], "type": "text/javascript" } }
      ]
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/api/logout", "host": ["{{baseUrl}}"], "path": ["api", "logout"] }
      },
      "event": [
        { "listen": "test", "script": { "exec": ["pm.test('Status 200/204', function () { pm.expect(pm.response.code).to.be.oneOf([200,204]); });"], "type": "text/javascript" } }
      ]
    }
  ]
}